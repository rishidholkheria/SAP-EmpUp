            <div class="card card-body mb-3">
              <% if(file.isImage) { %>
                <img src="image/<%= file.filename %>" alt="">
                <% } else { %>
                  <a href = "/files/<%= file.filename %>" target = "_blank"><%= file.filename %></a>
                    <% } %>
                      <form method="DELETE" action="/files/<%= file._id %>?_method=DELETE">
